#include <stdio.h>
int main() 
{
    double liters;       
    double kilometers;   
    double liters_per_100km; 
    double miles;        
    double gallons;      
    double mpg;          
    scanf("%lf", &liters);
    scanf("%lf", &kilometers);
    if (liters <= 0 || kilometers <= 0)
    {
        printf("Invalid Input\n");
        return 0;
    }
    liters_per_100km = (liters / kilometers) * 100.0;
    printf("Liters/100KM\n%.2f\n", liters_per_100km);
    miles = kilometers * 0.6214;
    gallons = liters * 0.2642;
    mpg = miles / gallons;
    printf("Miles/gallons\n%.2f\n", mpg);
    return 0; 
}
